// FORMA OLD
function Perfil (nombre, apellidos) {
    this.nombre = nombre;
    this.apellidos = apellidos;
}

let perfil1 = new Perfil ("Miguel Ángel", "Montoya Torregrosa");
let perfil2 = new Perfil ("Cristina", "Torregrosa");
let perfil3 = new Perfil ("Lorena", "García");

console.log(tarea1);
