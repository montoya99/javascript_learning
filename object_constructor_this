// FORMA NEW!!!

class Perfil {
    constructor(nombre, urgencia) {
        this.tarea = nombre;
        this.urgencia = urgencia;
    }
}

const perfil1 = new Perfil("Aprender Marketing Digital", "Urgente");
const perfil2 = new Perfil("Ir al GYM", "Urgente");
const perfil3 = new Perfil("Dejar de ver YT", "Urgente");

console.log(perfil1);
console.log(perfil3);
console.log(perfil3);
