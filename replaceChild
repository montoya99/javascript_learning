// REEMPLAZAR ELEMENTOS

(function () {
  'use strict'; // MODO ESTRICTO
  document.addEventListener("DOMContentLoaded", function() {
  
    // VAMOS A INTERCAMBIAR UN TEXTO POR OTRO (REEMPLAZAR)
    var viejoNodo = document.querySelector("main h2");
    var nuevoNodo = document.querySelector("footer h2");

    // viejoNodo(Elemento "Antiguo").parentNode(acceder desde el padre).replaceChild(funci√≥n Reemplazar)+(lo nuevo, lo viejo);
    viejoNodo.parentNode.replaceChild(nuevoNodo, viejoNodo);
    

  });
 })();   
    
    
    //________________________________
    
    
    // REEMPLAZANDO UN ELEMENTO ACTUAL POR OTRO CREADO NUEVO
    
(function () {
  'use strict'; // MODO ESTRICTO
  document.addEventListener("DOMContentLoaded", function() {


    var viejoTitulo = document.querySelector("main h2");
    var nuevoTitulo = document.createElement("h2");
    var nuevoTexto = document.createTextNode("HOLA MUNDO");
    
    nuevoTitulo.appendChild(nuevoTexto);
    viejoTitulo.parentNode.replaceChild(nuevoTitulo, viejoTitulo);

    
 });
})();
    


