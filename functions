//CREAS LA FUNCIÓN Y LAS VARIABLES QUE VA A POSEER. A CONTINUACIÓN INSERTAS LA ESTRUCTURA ("Hola Sr/a " + nombre + "...")
function saludar (nombre, trabajo, funcion) {
    console.log ("Hola Sr/a " + nombre + ", su nuevo puesto será: " + trabajo + ", y consistirá en " + funcion);

}

//LLAMAS Y LE DAS VALOR A LAS VARIANTES DE ARRIBA (nombre, trabajo, funcion)
saludar ("Miguel Ángel", "Front-End Developer", "gestionar el desarrollo de la front-end de la página.");
saludar ("Cristina", "Traductora", "X.");
saludar ("Paula", "Asistenta de Compras", "Y.");
saludar ("Lorena", "Jefe de Ventas", "Z.");


//ASIGNAR VALORES POR DEFECTO (nombre = "Desconocido", trabajo = "Desconocido", funcion = "Desconocido")

function saludar (nombre = "Desconocido", trabajo, funcion="Desconocido") {
    console.log ("Hola Sr/a " + nombre + ", su nuevo puesto será: " + trabajo + ", y consistirá en " + funcion);

}

saludar ("Miguel Ángel", "Front-End Developer", "gestionar el desarrollo de la front-end de la página.");
saludar ("Cristina", "Traductora", "X.");
saludar ("Paula", "Asistenta de Compras", "Y.");
saludar ("lorena", "Jefe de Ventas");

